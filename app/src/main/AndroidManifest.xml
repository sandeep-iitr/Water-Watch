<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.research.waterwatch"
    android:versionCode="2"
    android:versionName="1.2"
    >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.research.waterwatch.MapsPlacesActivity"
            android:label="@string/title_activity_maps_places"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.research.waterwatch.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.research.waterwatch.List_places"
            android:label="@string/title_activity_list_places"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.research.waterwatch.Graph_vis"
            android:label="@string/title_activity_graph_vis" >
        </activity>
        <activity
            android:name="com.research.waterwatch.PlacesData2"
            android:label="@string/title_activity_places_data2"
            android:screenOrientation="portrait"
            >
        </activity>
    </application>

</manifest>
